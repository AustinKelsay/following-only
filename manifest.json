{
    "manifest_version": 2,
    "name": "following only",
    "version": "1.0",
    "description": "An extension to block the 'for you' tab on Twitter.",
    "permissions": ["tabs", "https://twitter.com/*"],
    "content_scripts": [
      {
        "matches": ["https://twitter.com/*"],
        "js": ["index.js"]
      }
    ],
    "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Twitter Filter"
    }
  }
  